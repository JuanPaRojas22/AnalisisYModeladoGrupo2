DELIMITER $$

CREATE TRIGGER `set_salario_neto_before_insert` 
BEFORE INSERT ON `planilla`
FOR EACH ROW 
BEGIN
    -- Se establece el salario_neto igual al salario_base al momento de la inserción
    SET NEW.salario_neto = NEW.salario_base / 2;
END $$

DELIMITER ;

